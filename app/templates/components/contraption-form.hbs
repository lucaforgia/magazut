<form class="" action="" method="post">
  <strong>aggiungere anche possibilità di aggiornare tabella filtri id-code</strong>
  <ul>
    <li>
      <label for="denomination">Descrizione</label>
      {{input type="text" id="denomination" name="denomination" value=this.model.denomination}}
    </li>
    <li>
      <label for="idCode">Codice identificativo</label>
      {{input type="text" name="idCode" id="idCode" value=this.model.idCode}}
    </li>
    <li>
      <label for="material">Materiale</label>



      <select class="" name="material" id="material">
        {{#each this.materials as |material|}}
        <option onclick={{action (mut this.model.material) material.id}} value={{material.id}}>{{material.name}}</option>
        {{/each}}
      </select>
    </li>
    <li>
      <label for="machine">Macchina</label>
      <select class="machine" name="machine">
        {{#each this.machines as |machine|}}
        <option onclick={{action (mut this.model.machine) machine.id}} value={{machine.id}}>{{machine.name}}</option>
        {{/each}}
      </select>
      {{!-- <select class="" name="machineSelect" id="machineSelect"}}>
        {{#each this.machines as |machine|}}
        <option onclick={{action (mut this.model.machine) machine.id}} value={{machine.id}}>{{machine.name}}</option>
        {{/each}}
      </select> --}}
    </li>
    <li>
      <label for="contraptionTypesSelect">Tipologia</label>
      <select class="contTypes" name="contTypes">
        {{#each this.contraptionTypes as |contraption_type|}}
        <option onclick={{action (mut this.model.type) contraption_type.id}} value={{contraption_type.id}}>{{contraption_type.name}}</option>
        {{/each}}
      </select>
    </li>
    {{!-- <li>
      <label for="contraptionTypesSelect">Tipologia</label>
      <select class="" name="contraptionTypesSelect" id="contraptionTypesSelect" }}>
        {{#each this.contraptionTypes as |contraptionType|}}
        <option onclick={{action (mut this.model.type) contraptionType.id}} value={{contraptionType.id}}>{{contraptionType.name}}</option>
        {{/each}}
      </select>
    </li> --}}
    <li>
      <label for="availableQt">Quantità</label>
      {{input type="text" name="availableQt" value=this.model.availableQt}}
    </li>
    <li>
      <label for="minQt">Quantità minima</label>
      {{input type="text" name="minQt" value=this.model.minQt}}
    </li>
    <li>
      <label for="purchaseRequest">Richiesta acquisto</label>
      {{input type="text" name="purchaseRequest" value=this.model.purchaseRequest}}
    </li>
  </ul>
  <fieldset>
    <legend>Geometria</legend>
    <ul>
      <li>
        <label for="ut-long">Lunghezza</label>
        {{input type="text" name="ut-long" value=this.model.ut-long}}
      </li>
      <li>
        <label for="ut-thick">Spessore</label>
        {{input type="text" name="ut-thick" value=this.model.ut-thick}}
      </li>
      <li>
        <label for="ut-rad-ins">Raggio</label>
        {{input type="text" name="ut-rad-ins" value=this.model.ut-rad-ins}}
      </li>
      <li>
        <label for="ut-dia">Diametro</label>
        {{input type="text" name="ut-dia" value=this.model.ut-dia}}
      </li>
      <li>
        <label for="ut-deg">Angolo</label>
        {{input type="text" name="ut-deg" value=this.model.ut-deg}}
      </li>
    </ul>
  </fieldset>
  <div class="space_t_normal to_right half_width">
    <input class="very_big_button" type="button" name="createContraption" value="Crea" {{action "createContraption" this.model}}>
  </div>
