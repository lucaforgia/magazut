<form class="" action="" method="post">
  <fieldset>
    <legend>Info generiche</legend>
    <ul>
      <li>
        <label for="denomination">Descrizione</label>
        {{input type="text" id="denomination" class="input_text" name="denomination" value=this.model.denomination}}
      </li>
      <li>
        <label for="idCode">Codice identificativo</label>
        {{input type="text" name="idCode" id="idCode" value=this.model.idCode class="input_text"}}
      </li>
      <li>
        <label for="material">Materiale</label>
        <FSelect @list={{this.materials}} @value={{this.model.material}}/>
      </li>
      <li>
        <label for="machine">Macchina</label>
        <FSelect @list={{this.machines}} @value={{this.model.machine}}/>
      </li>
      <li>
        <label for="contraptionTypesSelect">Tipologia</label>
        <FSelect @list={{this.contraptionTypes}} @value={{this.model.type}}/>
      </li>
      <li>
        <label for="availableQt">Quantità</label>
        {{input type="number" name="availableQt" value=this.model.availableQt class="input_text"}}
      </li>
      <li>
        <label for="minQt">Quantità minima</label>
        {{input type="number" name="minQt" value=this.model.minQt class="input_text"}}
      </li>
      {{!-- <li>
        <label for="purchaseRequest">Richiesta acquisto</label>
        {{input type="text" name="purchaseRequest" value=this.model.purchaseRequest class="input_text"}}
      </li> --}}
    </ul>
  </fieldset>
  <fieldset>
    <legend>Geometria</legend>
    <ul>
      <li>
        <label for="ut-long">Lunghezza</label>
        {{input type="number" lang="en" step=".01" name="ut-long" value=this.model.ut-long class="input_text"}}
      </li>
      <li>
        <label for="ut-thick">Spessore</label>
        {{input type="number" lang="en" step=".01" name="ut-thick" value=this.model.ut-thick class="input_text"}}
      </li>
      <li>
        <label for="ut-rad-ins">Raggio</label>
        {{input type="number" lang="en" step=".01" name="ut-rad-ins" value=this.model.ut-rad-ins class="input_text"}}
      </li>
      <li>
        <label for="ut-dia">Diametro</label>
        {{input type="number" lang="en" step=".01" name="ut-dia" value=this.model.ut-dia class="input_text"}}
      </li>
      <li>
        <label for="ut-deg">Angolo</label>
        {{input type="number" lang="en" step=".01" name="ut-deg" value=this.model.ut-deg class="input_text"}}
      </li>
    </ul>
  </fieldset>
  {{yield}}
</form>
