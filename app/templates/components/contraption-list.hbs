<div class="result_text">
  Trovati <strong>{{this.list.length}}</strong> aggeggi
</div>
<table class="contraption_list_table">
  {{!-- <caption>Lista</caption> --}}
  <thead>
    <tr>
      <th>Denominazione</th>
      <th>Tipo di utensile</th>
      <th>Geometria</th>
      <th>Macchinario</th>
      <th>Materiale di lavorazione</th>
      <th>Codice</th>
      <th title="Quantità disponibile">Quantità</th>
      <th>Stato</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.list as |ut| }}
      <tr>
        <td class="denomination" {{action "onClickContraption" ut}}>{{ut.denomination}}</td>
        <td {{action "onClickContraption" ut}}>{{ut.typeName}}</td>
        <td {{action "onClickContraption" ut}}>
          <ul>
            {{#if ut.ut-rad-ins}}
              <li>Raggio inserto: {{ut.ut-rad-ins}}</li>
            {{/if}}
            {{#if ut.ut-long}}
              <li>Lunghezza: {{ut.ut-long}}</li>
            {{/if}}
            {{#if ut.ut-thick}}
              <li>Spessore: {{ut.ut-thick}}</li>
            {{/if}}
            {{#if ut.ut-dia}}
              <li>Diametro: {{ut.ut-dia}}</li>
            {{/if}}
            {{#if ut.ut-deg}}
              <li>Angolo: {{ut.ut-deg}}</li>
            {{/if}}
          </ul>
        </td>
        <td {{action "onClickContraption" ut}}>{{ut.machineName}}</td>
        <td class="material" {{action "onClickContraption" ut}}>{{ut.materialName}}</td>
        <td {{action "onClickContraption" ut}}>{{ut.idCode}}</td>
        <td class="available_qt" title="Quantità disponibile" {{action "onClickContraption" ut}}>{{ut.availableQt}}</td>
        <td class="order_state_color_{{ut.order_status}}">
          {{!-- {{input type="text" name="" value=ut.order_status}} --}}
          <select name="orderStatus">
            {{#each this.order_statuses as |order_s|}}
              {{#if (if-selected order_s.id ut.order_status)}}
              <option selected="selected" {{action "onClickOrderStatus" ut order_s.id}} value={{order_s.id}}>{{order_s.order_status_name}}</option>
              {{else}}
              <option {{action "onClickOrderStatus" ut order_s.id}} value={{order_s.id}}>{{order_s.order_status_name}}</option>
              {{/if}}
            {{/each}}
          </select>
        </td>

      </tr>
    {{/each}}
  </tbody>
</table>

{{yield}}
