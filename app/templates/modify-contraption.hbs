      </li>
      <li>
        <label for="machine">Macchina</label>
        <select class="machine" name="machine">
          {{#each this.machines as |machine|}}
            {{#if (if-selected machine.id this.model.machine)}}
            <option selected onclick={{action (mut this.model.machine) machine.id}} value={{machine.id}}>{{machine.name}}</option>
            {{else}}
            <option onclick={{action (mut this.model.machine) machine.id}} value={{machine.id}}>{{machine.name}}</option>
            {{/if}}
          {{/each}}
        </select>
      </li>
      <li>
        <label for="contraptionTypesSelect">Tipologia</label>
        <select class="contTypes" name="contTypes">
          {{#each this.contraptionTypes as |contraption_type|}}
            {{#if (if-selected contraption_type.id this.model.type)}}
            <option selected onclick={{action (mut this.model.type) contraption_type.id}} value={{contraption_type.id}}>{{contraption_type.name}}</option>
            {{else }}
              <option onclick={{action (mut this.model.type) contraption_type.id}} value={{contraption_type.id}}>{{contraption_type.name}}</option>
            {{/if}}
          {{!-- <option onclick={{action (mut this.model.type) contraption_type.id}} value={{contraption_type.id}}>{{contraption_type.name}}</option> --}}
          {{/each}}
        </select>
      </li>
      <li>
        <label for="availableQt">Quantità</label>
        {{input type="text" class="input_text" name="availableQt" value=this.model.availableQt}}
      </li>
      <li>
        <label for="minQt">Quantità minima</label>
        {{input type="text" class="input_text" name="minQt" value=this.model.minQt}}
      </li>

      {{!-- <li>
        <label for="orderStatus">Stato dell'ordine</label>
        <select name="orderStatus">
          {{#each this.order_statuses as |order_s|}}
            {{#if (if-selected order_s.id this.model.order_status)}}
            <option selected onclick={{action (mut this.model.order_status) order_s.id}} value={{order_s.id}}>{{order_s.order_status_name}}</option>
            {{else}}
            <option onclick={{action (mut this.model.order_status) order_s.id}} value={{order_s.id}}>{{order_s.order_status_name}}</option>
            {{/if}}
          {{/each}}
        </select>
      </li> --}}
      {{!-- <li>
        <label for="purchaseRequest">Richiesta acquisto</label>
        {{input type="text" class="input_text" name="purchaseRequest" value=this.model.purchaseRequest}}
      </li> --}}
    </ul>
    <fieldset>
      <legend>Geometria</legend>
      <ul>
        <li>
          <label for="ut-long">Lunghezza</label>
          {{input type="text" class="input_text" name="ut-long" value=this.model.ut-long}}
        </li>
        <li>
          <label for="ut-thick">Spessore</label>
          {{input type="text" class="input_text" name="ut-thick" value=this.model.ut-thick}}
        </li>
        <li>
          <label for="ut-rad-ins">Raggio</label>
          {{input type="text" class="input_text" name="ut-rad-ins" value=this.model.ut-rad-ins}}
        </li>
        <li>
          <label for="ut-dia">Diametro</label>
          {{input type="text" class="input_text" name="ut-dia" value=this.model.ut-dia}}
        </li>
        <li>
          <label for="ut-deg">Angolo</label>
          {{input type="text" class="input_text" name="ut-deg" value=this.model.ut-deg}}
        </li>
      </ul>
    </fieldset>
    <div class="space_t_normal center">
      <input class="button" type="button" name="updateContraption" value="Aggiorna" {{action "updateContraption" this.model}}>
    </div>
    <div class="space_t_normal">
      <input class="link" type="button" name="deleteContraption" value="Elimina" {{action "deleteContraption" this.model}}>

    </div>
  </form>


</div>


