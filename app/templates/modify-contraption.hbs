<h2>Modifica aggeggio</h2>
<div class="modify_contraption_main form_cont">
  <form class="" action="" method="post">
    <ul>
      <li>
        <label for="denomination">Descrizione</label>
        {{input type="text" class="input_text" id="denomination" name="denomination" value=this.model.denomination}}
      </li>
      <li>
        <label for="idCode">Codice identificativo</label>
        {{input type="text" class="input_text" name="idCode" id="idCode" value=this.model.idCode}}
      </li>
      <li>
        <label for="material">Materiale</label>
        <FSelect @list={{this.materials}} @value={{this.model.material}}/>

        {{!-- <select class="" name="material" id="material">
          {{#each this.materials as |material|}}
