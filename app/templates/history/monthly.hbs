<table class="history_table montly">
  <caption>Scarichi mensili: <span class="capitalize">{{monthName}} </span>{{year}}</caption>
  <thead>
    <tr>
      <td colspan="5">
        <div class="history_pagination to_right">
          <button class="link" type="button" name="history_prev" {{action "on_history_prev"}}>Mese successivo</button>
          <span> / </span>
          <button class="link" type="button" name="history_next" {{action "on_history_next"}}>Mese precedente</button>
        </div>
      </td>
    </tr>
    <tr>
      <th>Quantità</th>
      <th>Nome articolo</th>
      <th>Codice id</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.history_list as |history| }}
      {{#if history.transaction_time}}
      <tr class="clickable" {{action "onClickHistory" history.contraption_id}}>
        <td title="Quantità">{{history.quantity}}</td>
        <td title="Nomenclatura Aggeggio">{{history.contraption_denomination}}</td>
        <td title="Codice">{{history.contraption_id_code}}</td>
      </tr>
      {{/if}}
    {{/each}}

  </tbody>
</table>

{{outlet}}
